    <!-- Section Home (Hero) -->
    <section id="home" class="pt-16 bg-gradient-to-br from-primary to-blue-800 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div class="text-center md:text-left">
                    <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
                        Gérez votre budget simplement avec 
                        <span class="text-accent">MoneyWise</span>
                    </h1>
                    <p class="text-xl md:text-2xl mb-8 text-blue-100">
                        Suivez vos dépenses, fixez vos objectifs d'épargne et maîtrisez vos finances.
                    </p>
                    <a href="/auth/signup" class="inline-block bg-accent hover:bg-green-600 text-white font-semibold py-4 px-8 rounded-lg text-lg transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-transform">
                        Commencer maintenant
                    </a>
                </div>
                <div class="text-center">
                    <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8">
                        <svg class="w-64 h-64 mx-auto text-accent" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section About -->
